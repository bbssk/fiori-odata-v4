<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">
  <!-- <Dialog id="idDialog" title="{i18n>mostExpensiveTrips}" contentWidth="400px"> -->
  <Dialog id="idDialog"  binding="{/getMostExpensiveTrips(...)}" title="{i18n>mostExpensiveTrips}" contentWidth="400px">
    <form:SimpleForm binding="{$Parameter}" editable="true" labelSpanS="3">
      <Label text="{i18n>count}" />
      <Input id="idCountInput" value="{count}"/>

      <!-- if you dont want to mention prefix inside SimpleForm -->
      <!-- <Input id="idCountInput" value="{$Parameter/count}"/> -->

      <Label text="" />
      <Button text="{i18n>showTrips}" press=".onPressShowTrips" />
    </form:SimpleForm>

    <!-- if number is expected to be in return -->
    <!-- <List items="{path:'/getNumberOfTrips()', type:'sap.ui.mode.odata.type.Int16'}"> -->

    <!-- if function invokes without any number -->
    <!-- <List items="{/getMostExpensiveTrips()}"> -->

    <List items="{value}">
      <items>
        <ObjectListItem
          title="{name}"
          number="{budget}"
          numberUnit="{currency_code}">
          <attributes>
            <ObjectAttribute text="{description}" />
          </attributes>
        </ObjectListItem>
      </items>
    </List>
    <endButton>
      <Button text="{i18n>close}" press=".onPressCloseDialog" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>